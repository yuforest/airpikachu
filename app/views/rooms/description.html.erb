<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <dov class="panel-heading">
        Description
      </dov>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>

          <div class="row">
            <div class="form-group">
              <label for="">Listing name</label>
              <%= f.text_field :listing_name, placeholder: "What is your listing name?", class: "form-control", required: true %>
            </div>
          </div>

          <div class="row">
            <div class="form-group">
              <label for="">Summary</label>
              <%= f.text_area :summary, rows: 5, placeholder: "Summary of your house", class: "form-control", required: true %>
            </div>
          </div>

          <div class="text-center">
            <%= f.submit "Save", class: "btn btn-form" %>
          </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

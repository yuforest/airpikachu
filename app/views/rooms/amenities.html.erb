<div class="row">
  <div class="col-md-3">
    <%= render "room_menu" %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <dov class="panel-heading">
        Amenities
      </dov>

      <div class="panel-body">
        <div class="container">
          <%= form_for @room do |f| %>
            <div class="row form-group">
              <div class="col-md-4">
                <%= f.check_box :is_tv %> TV
              </div>

              <div class="col-md-4">
                <%= f.check_box :is_kitchen %> Kitchen
              </div>

              <div class="col-md-4">
                <%= f.check_box :is_internet %> Internet
              </div>

            </div>

            <div class="row form-group">
              <div class="col-md-4">
                <%= f.check_box :is_heating %> Heating
              </div>

              <div class="col-md-4">
                <%= f.check_box :is_air %> Air Confitioning
              </div>


            </div>
            <br>
            <br>
            <div class="text-center">
              <%= f.submit class: "btn btn-form" %>
            </div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>

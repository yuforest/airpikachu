<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <h2 class="text-center">Log in</h2>
    <br>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control", autocomplete: "email" %>
      </div>

      <div class="form-group">     
        <%= f.password_field :password, laceholder: "Password", class: "form-control", autocomplete: "current-password" %>
      </div>

      <div class="form-group">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %> Remember Me  
        <% end %>
        <span class="pull-right">
          <%= link_to "Forgot Password", new_user_password_path %>
        </span>
      </div>

      


      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary" %>
  </div>
</div>

